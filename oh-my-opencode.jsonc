{
    "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
    // ============================================================
    // SLIMMED OH-MY-OPENCODE CONFIG
    // Use case: Flutter, Web Dev, LLM Applications
    // Provider: OpenAI (GPT-5.3 Codex / GPT-5.3 Codex Spark)
    // Workflow: OpenClaw → Prometheus (plan) → User review → Atlas (execute)
    // ============================================================
    // ----------------------------------------------------------
    // AGENTS — Model assignments
    // ----------------------------------------------------------
    "plugin": ["opencode-openai-auth"],
    "agents": {
        // Main orchestrator — GPT-5.3 Codex for balanced quality/cost
        "Sisyphus": {
            "model": "openai/gpt-5.3-codex"
        },
        // Planner — generates detailed, actionable plans from rough requirements
        "Prometheus (Planner)": {
            "model": "openai/gpt-5.3-codex"
        },
        // Executor — runs the plan produced by Prometheus
        "Atlas": {
            "model": "openai/gpt-5.3-codex"
        },
        // Debugger & strategic advisor — for tough bugs and architecture questions
        "oracle": {
            "model": "openai/gpt-5.3-codex"
        },
        // Doc lookups & external knowledge — cheap and fast
        "librarian": {
            "model": "openai/gpt-5.3-codex-spark"
        },
        // Codebase exploration & grep — cheap and fast
        "explore": {
            "model": "openai/gpt-5.3-codex-spark"
        }
    },
    // ----------------------------------------------------------
    // DISABLED AGENTS — features you don't need
    // ----------------------------------------------------------
    "disabled_agents": [
        "multimodal-looker", // Screenshot/image analysis — not needed
        "metis", // Pre-planning consultant — you review plans yourself
        "momus" // Plan reviewer — you review plans yourself
    ],
    // ----------------------------------------------------------
    // CATEGORIES — task delegation presets
    // ----------------------------------------------------------
    "categories": {
        // Frontend/UI tasks — GPT-5.3 Codex per your preference
        "visual-engineering": {
            "model": "openai/gpt-5.3-codex",
            "temperature": 0.5,
            "prompt_append": "Focus on Flutter widget architecture, Material Design 3, and responsive web layouts."
        },
        // Backend/logic tasks — GPT-5.3 Codex
        "business-logic": {
            "model": "openai/gpt-5.3-codex",
            "temperature": 0.1
        },
        // Quick/trivial tasks — Codex Spark to save costs
        "quick": {
            "model": "openai/gpt-5.3-codex-spark"
        },
        // Low-priority unspecified tasks — Codex Spark
        "unspecified-low": {
            "model": "openai/gpt-5.3-codex-spark"
        },
        // High-priority unspecified tasks — GPT-5.3 Codex
        "unspecified-high": {
            "model": "openai/gpt-5.3-codex"
        },
        // Writing tasks (docs, comments) — Codex Spark
        "writing": {
            "model": "openai/gpt-5.3-codex-spark"
        }
    },
    // ----------------------------------------------------------
    // SISYPHUS AGENT — orchestration settings
    // ----------------------------------------------------------
    "sisyphus_agent": {
        "disabled": false,
        "default_builder_enabled": false, // Don't need the separate builder
        "planner_enabled": true, // Keep Prometheus for plan generation
        "replace_plan": true // Prometheus replaces the default planner
    },
    // ----------------------------------------------------------
    // DISABLED HOOKS — trim overhead
    // ----------------------------------------------------------
    "disabled_hooks": [
        "startup-toast", // Skip the banner on startup
        "auto-update-checker", // Check updates manually
        "agent-usage-reminder", // Don't need reminders about agent usage
        "session-notification", // Not using desktop notifications
        "interactive-bash-session", // OpenClaw drives non-interactively
        "non-interactive-env", // Let OpenCode handle this automatically
        "directory-readme-injector", // Skip injecting README context (saves tokens)
        "ralph-loop" // Skip this loop detection (todo-enforcer is enough)
    ],
    // ----------------------------------------------------------
    // SKILLS — keep useful ones
    // ----------------------------------------------------------
    // playwright and git-master are both kept (defaults)
    // To disable: "disabled_skills": ["playwright"]
    // ----------------------------------------------------------
    // MCPs — keep all three
    // ----------------------------------------------------------
    // websearch (Exa), context7 (official docs), grep_app (GitHub code search)
    // All enabled by default — no overrides needed
    // ----------------------------------------------------------
    // GIT MASTER — clean up commit messages
    // ----------------------------------------------------------
    "git_master": {
        "commit_footer": false, // No "Ultraworked with Sisyphus" footer
        "include_co_authored_by": false // No co-authored-by trailer
    },
    // ----------------------------------------------------------
    // BACKGROUND TASKS — concurrency limits
    // ----------------------------------------------------------
    "background_task": {
        "defaultConcurrency": 5
    }
}
